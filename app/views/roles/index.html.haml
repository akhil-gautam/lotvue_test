.container
  %h2
    Roles
  %table.table#role-table
    %thead
      %tr
        %th
          Role Name
        %th
          Hidden
          
    %tbody
      - @roles.each do|role|
        %tr
          %td
            = role.name
          %td
            = check_box_tag "role-id-#{role.id}", role.id, role.hidden
  .hide-button
    = button_tag 'Hide Roles', id: 'update-roles', class: 'btn btn-primary'